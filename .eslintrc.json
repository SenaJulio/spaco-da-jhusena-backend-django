{
  "env": {
    "browser": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["import"],
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "globals": {
    "Chart": "readonly",
    "bootstrap": "readonly",
    "AppUtils": "readonly",
    "formatarDataBR": "readonly",
    "performance": "readonly"
  },
  "rules": {
    "no-undef": "off",
    "no-unused-vars": ["warn", { "args": "none", "ignoreRestSiblings": true, "varsIgnorePattern": "^_" }],
    "no-nested-ternary": "off",
    "no-console": "off",
    "prefer-optional-chaining": "off",
    "import/order": ["warn", { "newlines-between": "always" }]
  }
}
